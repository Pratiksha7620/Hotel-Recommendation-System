<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Admin Dashboard | HotelFinder</title>
  <link rel="stylesheet" href="admindashboard.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>
<body>
  <div class="wrapper">
    <!-- Sidebar -->
    <aside class="sidebar">
         
<img src="images/adlogo.png" alt="User Logo" class="logo-img" />

      <h2 class="logo">HotelFinder</h2>
      <nav class="menu">
        <a href="/dashboard"><i class="fas fa-home"></i> Dashboard</a>
        <a href="/hoteltab"><i class="fas fa-hotel"></i> Hotels</a>
        <a href="/amenitiestab"><i class="fas fa-swimming-pool"></i> Amenities</a>
        <a href="/citytab"><i class="fas fa-city"></i> City</a>
        <a href="/areatab"><i class="fas fa-map-marker-alt"></i> Area</a>
        <a href="/reviewtab"><i class="fas fa-comment-dots"></i> Review</a>
      </nav>
    </aside>

    <!-- Main -->
    <main class="main-content">
      <header class="navbar">
        <span><h1>Welcome to Admin Dashboard</h1></span>
        <form action="/logout" method="POST">
          <button class="logout-btn">Logout</button>
        </form>
      </header>

       <section class="dashboard">
          <% if (name !== "no") { %>
             <%- include(name,{show:show}) %>
              <!-- <%- include(name) %> -->

              <% } %>

      </section> 

    </main>
  </div>
</body>
</html>
